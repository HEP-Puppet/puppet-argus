[paps]
centralbanning.type = remote
centralbanning.enabled = true
centralbanning.dn = <%=centralbanning_dn%>
centralbanning.hostname = <%=centralbanning_hostname%>
centralbanning.port = <%=centralbanning_port%>
centralbanning.path = /pap/services/
centralbanning.protocol = https
centralbanning.public = false

[paps:properties]
poll_interval = 14400
ordering = centralbanning
ordering = default

[repository]
location = /usr/share/argus/pap/repository
consistency_check = false
consistency_check.repair = false

[security]
certificate = /etc/grid-security/hostcert.pem
private_key = /etc/grid-security/hostkey.pem

[standalone-service]
entity_id = http://<%=service_name%>/pap
hostname = localhost
port = <%=pap_port%>
shutdown_port = <%=pap_shutdown_port%>
shutdown_command = <%=pap_shutdown_command%>


