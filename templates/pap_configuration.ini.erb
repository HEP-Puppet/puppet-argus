[repository]
location = /usr/share/argus/pap/repository
consistency_check = false
consistency_check.repair = false

[security]
certificate = /etc/grid-security/hostcert.pem
private_key = /etc/grid-security/hostkey.pem

[standalone-service]
entity_id = http://<%= scope['argus::service_name']%>/pap
hostname = <%= @fqdn %> 
port = <%= scope['argus::pap_port']%>
shutdown_port = <%= scope['argus::pap_shutdown_port']%>
shutdown_command = <%= scope['argus::secret_pass'] rescue scope['argus::pap_shutdown_command']%>


