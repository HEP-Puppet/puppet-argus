# Argus PDP configuration
# 
# Documentation: https://twiki.cern.ch/twiki/bin/view/EGEE/AuthZPDPConfig
# 
[SERVICE]
entityId = http://<%= scope['argus::service_name']%>/pdp
hostname = <%= @fqdn %>
port     = <%= scope['argus::pdp_port']%>
adminPort = <%= scope['argus::pdp_admin_port']%>
adminPassword = <%= scope['argus::secret_pass'] rescue scope['argus::pdp_pass']%>

[POLICY]
paps = https://<%= scope['argus::pap_server'] -%>:8150/pap/services/ProvisioningService
retentionInterval = <%= scope['argus::pdp_retention_interval'] -%>

[SECURITY]
servicePrivateKey = /etc/grid-security/hostkey.pem
serviceCertificate = /etc/grid-security/hostcert.pem
trustInfoDir = /etc/grid-security/certificates/
enableSSL = true


